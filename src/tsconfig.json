{
    "compilerOptions": {
      "target": "es2020",
      "preserveConstEnums": true,
      "noEmit": true,
      "sourceMap": false,
      "module":"es2015",
      "moduleResolution":"node",
      "esModuleInterop": true, 
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,  
      "experimentalDecorators": true // necessary for inversify usage
    },
    "exclude": ["node_modules", "**/*.test.ts"]
  }